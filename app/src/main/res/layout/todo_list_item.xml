<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/todoItemTextView"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/checkBox"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:text="완료"
        app:layout_constraintEnd_toStartOf="@+id/todoItemEditButton"
        app:layout_constraintStart_toEndOf="@+id/todoItemTextView"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/todoItemEditButton"
        android:layout_width="54dp"
        android:layout_height="45dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="수정"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/checkBox"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="54dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="1dp"
        android:text="삭제"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/todoItemEditButton"
        tools:layout_editor_absoluteY="16dp" />
</android.support.constraint.ConstraintLayout>